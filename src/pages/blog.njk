---
layout: base
permalink: /blog/
eleventyNavigation:
  key: Blog
---
<h1>Blog</h1>
<ol class="post-list">
  {%- for post in collections.posts | reverse -%}
    <li class="post-list-item">
      <h2>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <time itemprop="datePublished" datetime="{{ post.date | dateToISO }}">{{ post.date | readableDate('dd LLL yyyy') }}</time>
      <p>{{ post.data.description }}</p>
    </li>
  {%- endfor -%}
</ol>